{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": ["error", { "allow": ["info", "error"] }],
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  }
}
